# Docker Environment Variables
# This file contains Docker-specific environment variables

# Database Configuration for Docker
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=sereno_system_web
DB_USERNAME=root
DB_PASSWORD=password

# Cache Configuration for Docker
CACHE_DRIVER=redis
SESSION_DRIVER=redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration for Docker (MailHog/Mailpit)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Docker-specific settings
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8080

# File permissions
FILE_PERMISSION=775
FOLDER_PERMISSION=775